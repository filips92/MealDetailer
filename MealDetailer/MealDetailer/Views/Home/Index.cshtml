@{
    ViewBag.Title = "Home Page";
}
<script src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.5.5/angular.js"></script>
<script src="~/Scripts/app.js"></script>

<div class="row" ng-app="MealDetailer" ng-controller="MainController">
    <div class="col-xs-12" ng-show="errors">
        <pre>
{{ errors }}
</pre>
    </div>
    <div class="col-xs-12" ng-show="!errors">
        {{ report.food.Name }}

        <ul>
            <li ng-repeat="singleNutrient in report.food.nutrients.nutrient">
                {{ singleNutrient['@@name'] }}
                <ul>
                    <li ng-repeat="singleMeasure in singleNutrient.measures.measure">
                        {{ singleMeasure['@@label'] }} -
                        <input type="text" ng-model="singleMeasure['@Html.Raw("@")value']"/>g
                    </li>
                </ul>
            </li>
        </ul>

        <button type="button" ng-click="save()">Save changes</button>
    </div>
</div>

<div class="row">
    <div class="col-xs-12 text-center">
        <a href="Home/GetXml?xmlUri=/Resources/booksSchemaSuccess.xml&xsdUri=/Resources/books.xsd" class="btn btn-success btn-lg">
            Valid file
        </a>
        <a href="Home/GetXml?xmlUri=/Resources/booksSchemaFail.xml&xsdUri=/Resources/books.xsd" class="btn btn-danger btn-lg">
            Invalid
        </a>
    </div>
</div>